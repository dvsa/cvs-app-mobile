{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "resolveJsonModule": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "typings/*.d.ts"],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
